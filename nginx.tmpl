# Generated by confd {{datetime}}
{{range gets "/maestro.io/apps/*"}}

# nginx vhost: {{.Key}}
upstream {{base .Key}} {
  server {{.Value}};
  keepalive 4;
}
server {
    listen 0.0.0.0:80;
    server_name {{base .Key}};

    access_log /var/log/nginx/{{base .Key}}-access.log;
    error_log /var/log/nginx/{{base .Key}}-error.log;

    error_page 404 /etc/conf.d/violino/404.html;
    error_page 500 502 503 504 /etc/confd/violino/500.html;

    location / {
                proxy_pass http://{{base .Key}};
                proxy_http_version 1.1;
                proxy_set_header Connection "";
                proxy_redirect     off;
                proxy_set_header   Host $host;
                proxy_set_header   X-Real-IP $remote_addr;
                proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header   X-Forwarded-Host $server_name;
    }
}
{{end}}
